<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><a href="<%= user %>">Show</a></td>
    <td><a href="<%= edit_user_path(user) %>">Edit</a></td>
    <td><a href="<%= user %>" data-confirm="Are you sure?" data-method="delete">Destroy</a></td>
  </tr>
<% end %>
</table>

